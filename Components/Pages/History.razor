@page "/history"
@using JournalEntryManagement.Models
@using JournalEntryManagement.Services
@inject JournalService JournalService
@inject NavigationManager NavigationManager

<PageTitle>History</PageTitle>

<div class="container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 style="color: var(--primary-color);">Your Journey</h2>
        <a href="write" class="btn btn-primary btn-sm">+ New Entry</a>
    </div>

    <div class="pro-card mb-4">
        <div class="row g-2">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Search title or content..."
                       @bind="SearchText" @bind:event="oninput" @bind:after="ApplyFilters" />
            </div>

            <div class="col-md-3">
                <select class="form-control" @bind="SelectedMood" @bind:after="ApplyFilters">
                    <option value="">All Moods</option>
                    <option value="Happy">Happy</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Sad">Sad</option>
                    <option value="Productive">Productive</option>
                    <option value="Stressed">Stressed</option>
                </select>
            </div>

            <div class="col-md-3">
                <input type="date" class="form-control" @bind="FilterDate" @bind:after="ApplyFilters" />
            </div>

            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">Clear</button>
            </div>
        </div>
    </div>

    @if (FilteredList == null)
    {
        <p>Loading...</p>
    }
    else if (FilteredList.Count == 0)
    {
        <div class="alert alert-info text-center">
            No entries found. Try changing your filters or write a new one!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var entry in FilteredList)
            {
                <div class="col-12 mb-3">
                    <div class="pro-card p-3">
                        <div class="d-flex justify-content-between">
                            <h5 class="fw-bold text-primary">@entry.Title</h5>
                            <small class="text-muted">@entry.EntryDate.ToShortDateString()</small>
                        </div>

                        <div class="mb-2">
                            <span class="badge bg-info text-dark">@entry.PrimaryMood</span>
                            @if (!string.IsNullOrEmpty(entry.SecondaryMood1))
                            {
                                <span class="badge bg-light text-dark border">@entry.SecondaryMood1</span>
                            }
                            @if (!string.IsNullOrEmpty(entry.Tags))
                            {
                                <span class="ms-2 text-muted small">Tags: @entry.Tags</span>
                            }
                        </div>

                        <p class="text-muted text-truncate" style="max-height: 60px;">
                            @entry.Content
                        </p>

                        <div class="mt-2">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => EditEntry(entry)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => DeleteEntry(entry)">Delete</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<JournalEntry> AllEntries = new();
    private List<JournalEntry> FilteredList = new();

    // Filter Variables
    private string SearchText = "";
    private string SelectedMood = "";
    private DateTime? FilterDate = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        AllEntries = await JournalService.GetAllEntriesAsync();
        FilteredList = AllEntries; // Show all by default
    }

    private void ApplyFilters()
    {
        var query = AllEntries.AsEnumerable();

        // 1. Filter by Search Text (Title or Content)
        if (!string.IsNullOrWhiteSpace(SearchText))
        {
            query = query.Where(e =>
                (e.Title?.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (e.Content?.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ?? false));
        }

        // 2. Filter by Mood
        if (!string.IsNullOrWhiteSpace(SelectedMood))
        {
            query = query.Where(e => e.PrimaryMood == SelectedMood || e.SecondaryMood1 == SelectedMood || e.SecondaryMood2 == SelectedMood);
        }

        // 3. Filter by Specific Date
        if (FilterDate.HasValue)
        {
            query = query.Where(e => e.EntryDate.Date == FilterDate.Value.Date);
        }

        FilteredList = query.ToList();
    }

    private void ClearFilters()
    {
        SearchText = "";
        SelectedMood = "";
        FilterDate = null;
        FilteredList = AllEntries;
    }

    private void EditEntry(JournalEntry entry)
    {
        // for editing we just have to go to the write page and set the date to that entry date
        // Since our Write page auto loads based on our date. we just have to know the date.
        // A simpler way for my this app structure is to navigate to Write,
        // but since Write defaults to **Today** VVI we might need to pass the date.
        // For simplicity. we will just tell the user to go to Write and pick the date.
        // or we can also pass it as a query string if we wanted to be fancy, but let's stick to simple:

        NavigationManager.NavigateTo($"write");
        // Ideally we would update the Write page to accept a date parameter,
        // but for now. the user can use the Datepicker on the write page to find this entry.
    }

    private async Task DeleteEntry(JournalEntry entry)
    {
        bool confirm = await Application.Current.MainPage.DisplayAlert("Delete?", "Are you sure you want to delete this?", "Yes", "No");
        if (confirm)
        {
            await JournalService.DeleteEntryAsync(entry);
            await LoadData(); // Refresh list
        }
    }
}
